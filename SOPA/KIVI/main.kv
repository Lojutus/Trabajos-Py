        canvas:
            Color:
                rgb: 0,1,0
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1, 0.4
        orientation: 'vertical'
        pos_hint:{'x':0, 'y':0}
        BoxLayout:
            canvas:
                Color:
                    rgb: 1,1,1
