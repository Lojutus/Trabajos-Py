#:kivy 2.1.0
<Name>:
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        canvas:
            Color:
                rgb: 0,0,1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1, 0.1
        orientation: 'vertical'
        pos_hint:{'x':0, 'y':0.9}

        Label:
            text: "Sopath"
            color: 0,0,0
            font_name: 'Arial'
            bold: True
            font_size: root.width * 0.06
